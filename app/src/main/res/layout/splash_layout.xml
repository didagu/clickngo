<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splashdrawable">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click'N'Go Browser"
        android:id="@+id/splash_title"
        android:textColor="#ff000000"
        android:textSize="32sp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/clickngo_logo"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clickngo_logo"
        android:src="@drawable/ic_launcher"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/clickngo_logo"
        android:layout_marginTop="30dp"
        android:indeterminateDrawable="@xml/progress_color"
        android:id="@+id/progress"
        android:visibility="visible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:id="@+id/splash_text"
        android:textColor="#ff232109"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/progress"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>